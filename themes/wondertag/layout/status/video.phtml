<div class="story-video">
    <video id="customVideo" class="story-image-wrapper" preload="auto" playsinline style="width: 100%; height: 100%; max-width: 100%; max-height: 100%;" data-story-video="<?php echo $wo['media']['id'];?>">
        <source src="<?php echo $wo['media']['filename'];?>" type='video/mp4'>
        <source src="<?php echo $wo['media']['filename'];?>" type='video/webm'> 
    </video>
    <div id="customPlayButton" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); cursor: pointer;">▶️</div>
</div>
<script>
jQuery(document).ready(function($) {
    var video = document.getElementById('customVideo');
    var playButton = document.getElementById('customPlayButton');

    playButton.addEventListener('click', function() {
        if (video.paused) {
            video.play();
            playButton.style.display = 'none';
        } else {
            video.pause();
            playButton.style.display = 'block';
        }
    });

    video.addEventListener('ended', function() {
        playButton.style.display = 'block';
    });
});
</script>
